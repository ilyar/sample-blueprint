{
    "name": "sample-blueprint",
    "version": "1.0.0-alpha.0",
    "description": "Sample Blueprint with tests, benchmark and automatically generated code",
    "license": "AGPL-3.0-only",
    "author": "Ilyar (https://github.com/ilyar)",
    "scripts": {
        "metric-tact": "TON_COMPILER=tact npx blueprint snapshot -l 'tact v1.6.7'",
        "metric-func": "TON_COMPILER=func npx blueprint snapshot -l 'func v0.4.6'",
        "metric-tolk": "TON_COMPILER=tolk npx blueprint snapshot -l 'tolk v0.11.0'",
        "metric": "pnpm metric-func && pnpm metric-tact && pnpm metric-tolk",
        "start-deeplink": "blueprint run --testnet --deeplink",
        "start-tonconnect": "blueprint run --testnet --tonconnect",
        "start-mnemonic": "blueprint run --testnet --mnemonic",
        "start": "blueprint run --testnet --mnemonic",
        "tlb-check": "tlbc -v -t -q  contracts/SampleBench.tlb",
        "tlb-gen": "npx tlb -o wrappers/SampleBench.schema.ts contracts/SampleBench.tlb",
        "tlb-txt": "tlbc -qvvv contracts/SampleBench.tlb 2>&1 | tee build/sample_bench.txt",
        "lint": "prettier --check wrappers tests scripts",
        "format": "prettier --write wrappers tests scripts",
        "bp": "blueprint",
        "build": "blueprint build",
        "build-all": "npm run tlb-gen && blueprint build --all",
        "test": "jest --verbose"
    },
    "prettier": {
        "semi": false,
        "tabWidth": 2,
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 120,
        "trailingComma": "all"
    },
    "devDependencies": {
        "@tact-lang/compiler": "1.6.7",
        "@ton-community/func-js": "0.9.1",
        "@ton-community/tlb-codegen": "^2.0.0-beta.0",
        "@ton/blueprint": "^0.32.1",
        "@ton/core": "~0",
        "@ton/crypto": "^3.3.0",
        "@ton/sandbox": "^0.29.0",
        "@ton/test-utils": ">=0.5.0",
        "@ton/tolk-js": "0.11.0",
        "@ton/ton": ">=15.2.1 <16.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
